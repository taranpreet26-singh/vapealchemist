generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @unique @default(uuid())
  email    String
  password String
}

model Product {
  id               String        @unique @default(uuid())
  name             String        @unique
  shortInfo        String
  puffs            String
  nicotineStrength String
  eLiquidCapacity  String
  battery          String
  features         String
  flavors          String
  img              String
  status           ProductStatus @default(Latest)
  category         Category      @default(Disposables)
  discount         String        @default("0")
  price            String        @default("0")
}

enum Category {
  Disposables
  Ejuices
  Devices
  Accessories
}

enum ProductStatus {
  Latest
  Old
}
